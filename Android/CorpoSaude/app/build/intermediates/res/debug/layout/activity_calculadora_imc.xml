<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.corposaude.CorpoSaude" 
 	android:background="@drawable/balanca" >
 	
    <EditText
        android:id="@+id/etpeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="86dp"
        android:layout_toLeftOf="@+id/btvoltar"
        android:layout_toRightOf="@+id/peso"
        android:digits="1234567890.,"
         android:inputType="numberDecimal" 
        android:ems="10"
        android:textColor="#000000" >

    <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etaltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etpeso"
        android:layout_alignRight="@+id/etpeso"
        android:layout_below="@+id/etpeso"
        android:layout_marginTop="46dp"
        android:digits="1234567890.,"
         android:inputType="numberDecimal" 
        android:ems="10"
        android:textColor="#000000" >
        
    </EditText>

    <TextView
        android:id="@+id/peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etpeso"
        android:layout_alignBottom="@+id/etpeso"
        android:textColor="#000000" 
        android:layout_alignLeft="@+id/altura"
        android:text="@string/peso" />

    <TextView
        android:id="@+id/altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etaltura"
        android:layout_alignBottom="@+id/etaltura"
        android:textColor="#000000" 
        android:layout_alignParentLeft="true"
        android:text="@string/altura" />

    <Button
        android:id="@+id/btvoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btCalcula"
        android:layout_alignBottom="@+id/btCalcula"
        android:textColor="#000000" 
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="Voltar" />

    <Button
        android:id="@+id/btCalcula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/altura"
        android:layout_alignParentBottom="true"
        android:textColor="#000000" 
        android:layout_marginBottom="81dp"
        android:text="@string/calcula" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etpeso"
        android:layout_alignBottom="@+id/etpeso"
        android:layout_alignLeft="@+id/btvoltar"
        android:textColor="#000000" 
        android:layout_marginLeft="20dp"
        android:text="Ex:69" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etaltura"
        android:layout_alignBottom="@+id/etaltura"
        android:layout_alignLeft="@+id/textView1"
        android:textColor="#000000" 
        android:text="Ex:1.69" />

    <Button
        android:id="@+id/bttabela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etaltura"
        android:layout_below="@+id/btlimpar"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/textView2"
        android:text="TABELA IMC" />

    <Button
        android:id="@+id/btlimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btvoltar"
        android:layout_alignBottom="@+id/btvoltar"
        android:layout_centerHorizontal="true"
        android:text="Limpar"
        android:textColor="#000000" />
    
       </RelativeLayout>
