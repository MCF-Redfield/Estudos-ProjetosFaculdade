<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="restaurante11.tchunaisoft.com.br.FechaCaixaActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/totalFinal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="        Lista de Pedidos"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:height="50dp"
        android:textSize="30dp"
        android:textAlignment="inherit"
        android:ellipsize="middle" />

    <Button
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Finaliza Caixa"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/precoFinal"
        android:layout_alignEnd="@+id/precoFinal"
        android:layout_marginRight="33dp"
        android:onClick="finalizar"
        android:layout_marginEnd="43dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/precoFinal"
        android:layout_below="@+id/totalFinal"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Novo Pedido"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:onClick="paraPedido"
        android:layout_marginStart="41dp" />

</RelativeLayout>
