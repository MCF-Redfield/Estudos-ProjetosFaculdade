<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_contador_pessoas_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.matheus.contadorpessoas.ContadorPessoasMainActivity"
    tools:showIn="@layout/activity_contador_pessoas_main">

    <Button
        android:text="0"
        android:layout_width="220px"
        android:layout_height="220px"
        android:id="@+id/buttonMan"
        android:onClick="addMan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#d46bda" />

    <Button
        android:text="0"
        android:layout_width="220px"
        android:layout_height="220px"
        android:id="@+id/buttonWoman"
        android:onClick="addWoman"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#3843db" />

    <TextView
        android:text="Pessoas: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="13pt"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewPessoas" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="resetPessoas"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonReset" />
</RelativeLayout>
