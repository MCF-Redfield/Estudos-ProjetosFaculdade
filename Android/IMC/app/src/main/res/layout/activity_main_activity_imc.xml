<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityIMC">

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/h"
        android:hint="     Altura"
        android:inputType="numberDecimal"
        android:layout_alignTop="@+id/peso"
        android:layout_toRightOf="@+id/calcula"
        android:layout_toEndOf="@+id/calcula" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/peso"
        android:hint="     Peso"
        android:inputType="numberDecimal"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/calcula"
        android:layout_toStartOf="@+id/calcula"
        android:layout_marginTop="101dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/calcula"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/resultado"
        android:onClick="calculaImc"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint=""
        android:id="@+id/resultado"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="       IMC"
        android:id="@+id/textView"
        android:layout_above="@+id/resultado"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
