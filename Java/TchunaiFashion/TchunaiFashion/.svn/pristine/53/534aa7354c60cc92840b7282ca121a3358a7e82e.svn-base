/*Configurando, expecificamente, a imagem do centro de distribuição*/
#centro-distribuicao{
  margin-left: auto;
  margin-right: auto;
  width: 550px;
  }

/*Configurando logo*/


#rodape{
  color: #777;
  margin: 30px 0;
  padding: 30px 0;
  }

#rodape img{
  margin-right: 30px;/*estabelece a distancia de alguma coisa ao lado direito da imagem*/
  vertical-align: middle;
  width: 94px;/*tamanho da imagem do logo*/
  }

#familia-pelho{
  float: right;/*Lado no qual a imagem ficará posicionada*/
  margin: 0 0 10px 10px;/*distancia em q ficará os elementos ao redor da imagem*/
  }
.menu-setores ul{
  font-size: 15px;
  }


.menu-setores ul li{
  display: inline;/*Dispondo os elementos da lista horizontalmente (linear)*/
  margin-left: 20px;
  }

.menu-setores a{
   color: #AA0D1F;
   text-decoration: none;
  }
  
.menu-setores a:hover{
	color: red;
	text-decoration: underline;
}  

.sacola{
float:left;
position: absolute;
top: 70px;
right: 400px;
background-image: url('../img/icon-carrinho.png');
width: 143px;/* Faz a largura ficar igual a da largura da imagem de exemplo */
height: 38px;/* Faz a altura ficar igual a da altura da imagem de exemplo */
  }

p:first-letter{/*Negritando primeiras letras de parágrafos*/
  font-weight: bold;
  }

h1 + p{
   text-indent: 0;/*removendo 'parágrafo' do primeiro parágrafo*/
  }

p:first-line{
  font-variant: small-caps;
  }

.menu-setores a:hover{/*efeito ao passar o mouse*/
  color: #007dc6;
  }

.menu-setores a:active{/*efeito ao clicar sobre*/
  color: #867dc6;
  }

:not(p) + p:first-line {
  font-variant: small-caps;
  }

  
