
p{
  line-height: 19px; /* tamanho da altura de cada linha */
  letter-spacing: 1px; /* tamanho do espaço entre cada letra */
  word-spacing: 5px; /* tamanho do espaço entre cada palavra */
  text-indent: 30px; /* tamanho da margem da primeira linha do texto */
  /*padding: 10px 20px 15px 5px;*/
  margin: 0 0;
  padding: 0 45px;
  text-indent: 15px;
  font-family: mono space;
}

/*Atribuindo imagem ao fundo de H1*/
h1{
   background-image: url('../img/sobre-background.jpg');
   font-family: serif;/*definindo a familia das fontes*/
   padding: 10px;/*espaçamento*/
  }

/*Configurando a borda, cor ,margem e fonte*/
body{
  background: url('../img/bg-slide-topo.png') repeat-x;
  margin: 0;
  border-style: none;
  border-width: 1px;
  position: relative;
  color: #333333;
  font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
  margin-left: auto;
  margin-right: auto;
  width: 940px;
  }

/*Borda de H2*/
h2{
  border-bottom: 2px solid #333333;
  font-family: sans-serif;/*definincdo familia das fontes*/
  margin-top: 30px;/*margem na parte de cima*/
  }

/*Formatando figuras*/
figure{
  background-color: #F2EDED;
  border: 1px solid #ccc;
  text-align: center;
  padding: 15px;
  margin: 0 auto;/*0 p/ deixar conteudo colado acima e auto para centralizá-lo automaticamente*/
  }

/*Configurando legendas figuras*/
figcaption{
  font-style: italic;
  text-align: center;
  margin-top: 10px;
  }

